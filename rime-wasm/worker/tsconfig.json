{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "removeComments": true,
    "lib": [
      "DOM", "WebWorker", "DOM.Iterable", "ESNEXT"
    ],
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "allowJs": true,
    "declaration": false,
    "outDir": "./out",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*.ts"
  ]
}
